{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/modules/shared/*"],
      "@shared/domain/*": ["src/modules/shared/domain/*"],
      "@shared/application/*": ["src/modules/shared/application/*"],
      "@shared/infrastructure/*": ["src/modules/shared/infrastructure/*"],
      "@document-processing/*": ["src/modules/document-processing/*"],
      "@document-processing/domain/*": ["src/modules/document-processing/domain/*"],
      "@document-processing/application/*": ["src/modules/document-processing/application/*"],
      "@document-processing/infrastructure/*": ["src/modules/document-processing/infrastructure/*"],
      "@document-processing/presentation/*": ["src/modules/document-processing/presentation/*"],
      "@health/*": ["src/modules/health/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
