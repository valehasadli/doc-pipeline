{
  "name": "document-processing-pipeline",
  "version": "1.0.0",
  "description": "Enterprise-grade document processing pipeline with DDD and Event-Driven Architecture",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist coverage",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --exit-child -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "docker:build": "docker build -t document-pipeline .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:services": "docker-compose up mongodb redis",
    "dev:local": "npm run docker:services & npm run start:dev",
    "migrate:create": "ts-node src/infrastructure/database/migrations/create-migration.ts",
    "migrate:up": "ts-node src/infrastructure/database/migrations/migrate.ts up",
    "migrate:down": "ts-node src/infrastructure/database/migrations/migrate.ts down",
    "migrate:status": "ts-node src/infrastructure/database/migrations/migrate.ts status",
    "prepare": "husky install",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "document-processing",
    "ddd",
    "event-driven",
    "typescript",
    "enterprise",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/ioredis": "^4.28.10",
    "bullmq": "^4.18.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "ioredis": "^5.7.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.2.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "testcontainers": "^10.4.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
